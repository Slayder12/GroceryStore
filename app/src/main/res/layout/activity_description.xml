<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescriptionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageEditTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:src="@drawable/icon_image" />

    </RelativeLayout>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameInfoTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Наименование: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="2dp" />

        <EditText
            android:id="@+id/productNameEditET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Название продукта"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/priceInfoTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="2dp" />

        <EditText
            android:id="@+id/priceEditTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Цена"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </TableRow>

    <TextView
        android:id="@+id/InfoTextTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="2dp" />

    <EditText
        android:id="@+id/descriptionEditET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:hint="Описание..."
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>